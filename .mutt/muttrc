# Sets real name
set realname= 'gkeyring --name name -o secret'

# Sets how mail is stored
set mbox_type=maildir

# enables spoolfile
set virtual_spoolfile=yes

# Force encryption
set ssl_force_tls=yes
set ssl_starttls=yes

# Sets up sidebar
set sidebar_visible = yes

# Speeds up folder switch
set sleep_time = 0

# Sets sidebar Binds
bind index,pager \ck sidebar-prev
bind index,pager \cj sidebar-next
bind index,pager \Co sidebar-open

# Sets cache directories
set header_cache = "~/.mutt/cache/headers"
set message_cachedir = "~/.mutt/cache/bodies"
set certificate_file = "~/.mutt/certificates"

# Sets default email
source ~/.mailboxes

# Sets binding to change accounts 
macro index <f3> '<sync-mailbox><enter-command>source /home/haden/.mailboxes2<enter><change-folder>!<enter>'
macro index <f2> '<sync-mailbox><enter-command>source /home/haden/.mailboxes<enter><change-folder>!<enter>'

# Tells mutt how to view html
auto_view text/html
set mailcap_path 	= ~/.mutt/mailcap

# Keeps imap alibe
set timeout=10
set net_inc=5
set imap_keepalive = 300

# Notmuch binds
macro index A "<modify-labels>+archive -unread -inbox -new\\n" "Archive message"
macro index c "<change-vfolder>?" "Change to vfolder overview"
macro index \\\\ "<vfolder-from-query>" "Search mailbox"

# Sets colors for mutt
source /home/haden/.mutt/mutt.colors
